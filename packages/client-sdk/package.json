{
  "name": "@mcplatform/client-sdk",
  "version": "0.1.0",
  "description": "MCPlatform Client SDK for frontend applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
